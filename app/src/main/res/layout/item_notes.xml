<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:background="#abcdef">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ivDeleteImage"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tvText"
        android:textSize="16sp"
        android:padding="12sp"
        android:textColor="@color/black"
        tools:text="Anuj"/>

    <ImageView
        android:id="@+id/ivDeleteImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvText"
        app:layout_constraintBottom_toBottomOf="@+id/tvText"
        android:padding="14dp"
        android:src="@drawable/ic_outline_delete_forever_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>